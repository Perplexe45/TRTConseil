{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}

	<section data-bs-version="5.1" class="mt-5" id="form7-r">
		<div class="container">

			<div class="container my-1">
				<div class="row">
					<div class="col-md-3"></div>
					<div class="col-md-6">
						<div class=" titleH1 p-2">
							<h2 class="mbr-fonts-style align-center pt-1 fs-2">
								Connexion des utilisateurs
						</div>
					</div>
					<div class="col-md-3"></div>
				</div>
			</div>

			<div class="row justify-content-center mt-4">
				<div class="col-lg-8 mx-auto mbr-form">

					<script>
						// Sélection du lien avec la classe refreshForm
const refreshLink = document.querySelector('.refreshForm');

// Ajout d'un écouteur d'événements sur le lien
refreshLink.addEventListener('click', function (event) { // Empêcher le comportement par défaut du lien
event.preventDefault();

// Récupérer l'URL du lien
const url = this.getAttribute('href');
// window.alert('OK');
// Effectuer la redirection vers l'URL récupérée
window.location.href = url;
});
					</script>
						<div class="mt-5 card shadow-sm p-4 bg-white mx-auto" style="max-width: 400px; border-radius: 25px;">
    <form action="" method="POST" class="mbr-form form-with-styler mx-auto" data-verified="">
        <p class="mbr-text mbr-fonts-style align-center mb-4 display-7">
            Veuillez vous identifier
        </p>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que :
                {{ app.user.userIdentifier }},
                <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="form-group mb-3 text-center">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control inputCustom" autocomplete="email" required autofocus>
        </div>
        <div class="form-group mb-3 text-center">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control inputCustom" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary btn-block btn-custom">
                Valider
            </button>
        </div>
    </form>
</div>


							
				</div>
			</div>
		</div>
	{% endblock %}
