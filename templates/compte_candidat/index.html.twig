{% extends 'base.html.twig' %}

{% block title %}compte candidat{% endblock %}
{% block stylesheets %} {% endblock %}

{% block body %}

	{# {{ dump(app.user) }} #}

	<h1 class="afterHeader pt-2 pb-3">Espace personnel de :
		{{ app.user.email }}
	</h1>

	<div class="">
		<div class=" ">
			<div class="section">
				<div class="container">
					<div class="row">
						<div class="col-lg-3 col-md-4">
							<div class="dashboard_menu bg-light">
								<ul class="nav flex-column" role="tablist">
									<li class="nav-item fs-3 text-warning">
										<a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#orders" role="tab" aria-controls="orders" aria-selected="false">
											<i class="ti-shopping-cart-full"></i>Annonces</a>
									</li>
									<li class="nav-item fs-3">
										<a class="nav-link" id="address-tab" data-bs-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="true">
											<i class="ti-location-pin"></i>Mon adresse</a>
									</li>
									<li class="nav-item fs-3">
										<a class="nav-link" id="account-detail-tab" data-bs-toggle="tab" href="#account-detail" role="tab" aria-controls="account-detail" aria-selected="true">
											<i class="ti-id-badge"></i>Détails du compte</a>
									</li>
									<li class="nav-item fs-3">
										<a class="nav-link" id="logout-tab" href="#logout" data-bs-toggle="tab" role="tab" aria-controls="logout" aria-selected="true">
											<i class="ti-lock"></i>Supprimer le compte</a>
									</li>
								</ul>
							</div>
						</div>
						<div class="col-lg-8 col-md-7">
							<div class="tab-content dashboard_content">
								<div class="tab-pane fade active show" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
									<div class="card">
										<div class="card-header bg-light">
											<h3 class="text-center">Tableau de bord</h3>
										</div>
										<div class="card-body">
											<p>From your account dashboard. you can easily check &amp; view your
												<a href="javascript:void(0);" onclick="$('#orders-tab').trigger('click')">recent orders</a>, manage your
												<a href="javascript:void(0);" onclick="$('#address-tab').trigger('click')">shipping and billing addresses</a>
												and
												<a href="javascript:void(0);" onclick="$('#account-detail-tab').trigger('click')">edit your password and account details.</a>
											</p>
										</div>
									</div>
								</div>
								<div class="tab-pane fade" id="logout" role="tabpanel" aria-labelledby="logout-tab">
									<div class="card">
										<div class="card-header">
											<h3 class="text-center">Suppression du compte</h3>
										</div>
										<div class="card-body">
											<p>Vous avez la possibilité de supprimer votre compte, si vous le souhaitez
											</p>
											<button type="submit" class="btn btn-fill-out py-2" name="submit" value="Submit">Suppression</button>
										</div>
									</div>
								</div>
								<div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
									<div class="card">
										<div class="card-header">
											<h3 class="text-center">Mes annonces postulées</h3>
										</div>
										<div class="card-body">
											<div class="table-responsive">
												<table class="table">
													<thead>
														<tr>
															<th>Order</th>
															<th>Date</th>
															<th>Status</th>
															<th>Total</th>
															<th>Actions</th>
														</tr>
													</thead>
													<tbody>
														<tr>
															<td>#1234</td>
															<td>March 15, 2020</td>
															<td>Processing</td>
															<td>$78.00 for 1 item</td>
															<td>
																<a href="#" class="btn btn-fill-out btn-sm">View</a>
															</td>
														</tr>
														<tr>
															<td>#2366</td>
															<td>June 20, 2020</td>
															<td>Completed</td>
															<td>$81.00 for 1 item</td>
															<td>
																<a href="#" class="btn btn-fill-out btn-sm">View</a>
															</td>
														</tr>
													</tbody>
												</table>
											</div>
										</div>
									</div>
								</div>
								<div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
									<div class="row">
										<div class="col-lg-6">
											<div class="card mb-3 mb-lg-0">
												<div class="card-header">
													<h3 class="text-center">Adresse</h3>
												</div>
												<div class="card-body">
													<address>19 rue de Larçay<br>37550
														<br>Saint Avertin
														<br>
														Vedora
														<br>1212</address>
													<p>France</p>

												</div>
											</div>
										</div>
										<div class="col-lg-6">
											<div class="card">
												<div class="card-header">
													<h3 class="text-center">Modifier les coordonnées</h3>
												</div>
												<div class="card-body">
													<form method="POST">
														<div class="row">

															<div class="form-group col-md-12 mb-2">
																<label>Adresse
																	<span class="required">*</span>
																</label>
																<input required="" class="form-control" name="adresse" type="text">
															</div>
															<div class="form-group col-md-12 mb-2">
																<label>Code postal
																	<span class="required">*</span>
																</label>
																<input required="" class="form-control" name="codepostal">
															</div>

															<div class="form-group col-md-12 mb-2">
																<label>Ville
																	<span class="required">*</span>
																</label>
																<input required="" class="form-control" name="ville">
															</div>
															<div class="form-group col-md-12 mb-2">
																<label>Téléphone
																	<span class="required">*</span>
																</label>
																<input required="" class="form-control" name="telephone">
															</div>
															<div class="col-md-12">
																<button type="submit" class="btn btn-fill-out btnWidth bg-primary" name="submit" value="Submit">Valider</button>
															</div>
														</div>
													</form>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="tab-pane fade" id="account-detail" role="tabpanel" aria-labelledby="account-detail-tab">
									<div class="card">
										<div class="card-header">
											<h3 class="text-center">Détails du compte</h3>
										</div>
										<div class="card-body ">

											<form method="POST">
												<div class="row">

													<div class="form-group col-md-5 mb-2">
														<label>Nom
															<span class="required">*</span>
														</label>
														<input required="" class="form-control" name="nom" type="text">
													</div>
													<div class="form-group col-md-5 mb-2">
														<label>Prénom
															<span class="required">*</span>
														</label>
														<input required="" class="form-control" name="prenom">
													</div>

													<div class="form-group col-md-10 mb-2">
														<label>Address email
															<span class="required">*</span>
														</label>
														<input required="" class="form-control" name="email" type="email" value="{{ app.user.email }}">
													</div>
													<div class="form-group col-md-10 mb-2">
														<label>Mot de passe actuel
															<span class="required">*</span>
														</label>
														<input class="form-control" name="password" type="password" value="{{ app.user.password }}">
													</div>
													<div class="form-group col-md-10 mb-2">
														<label>Nouveau mot de passe
															<span class="required">*</span>
														</label>
														<input required="" class="form-control" name="npassword" type="password">
													</div>
													<div class="form-group col-md-10 mb-2">
														<label>Confirmer le mot de passe
															<span class="required">*</span>
														</label>
														<input required="" class="form-control" name="cpassword" type="password">
													</div>
													<div class="col-md-10">
														<button type="submit" class="btn btn-fill-out btnWidth bg-primary" name="submit" value="Submit">Valider</button>
													</div>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>


		</div>
	</div>


{% endblock %}

{% block javascripts %}	{% endblock %}