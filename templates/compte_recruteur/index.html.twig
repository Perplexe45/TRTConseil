														<input type="date" class="form-control inputCustom" id="date" name="date">
													</div>
													<div class="col">
														<label for="lieu">Lieu</label>
														<input type="text" class="form-control inputCustom" id="lieu" name="lieu">
													</div>
												</div>
												<div class="row">
													<div class="col">
