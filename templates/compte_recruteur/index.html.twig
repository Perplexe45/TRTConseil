																			<td>{{ annonce.dateCreation|date('Y.m.d') }}</td>
																			<td>{{ annonce.poste }}</td>
																			<td>{{ annonce.lieu }}</td>
																			<td>{{ annonce.horaire }}</td>
																			<td>{{ annonce.salaire }}</td>
																			<td>{{ annonce.description }}</td>
																			<td>
																				<div class="position-relative p-1">
																					<form action="{{ path('app_reponseCandidat', {'id': annonce.id}) }}" method="post" class="delete-post">
																						<button type="submit" class="btn-blue rounded text-nowrap">candidats</button>
																					</form>
																				</div>
																			</td>

																			<td>
																				<div class="position-relative p-1">
																					<form
																						action="{{ path('app_supprimerAnnonce', {'id': annonce.id}) }}" method="post" class="delete-jobListing">
